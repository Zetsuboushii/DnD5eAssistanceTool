{
  "name": "DnD5eAssistanceTool",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "update": "npm install --save @capacitor-community/sqlite@latest --save-dev vue-sqlite-hook@latest --save-dev jeep-sqlite@latest",
    "serve": "npm run copysqlwasm && vue-cli-service serve",
    "build": "npm run copysqlwasm && vue-cli-service build",
    "lint": "vue-cli-service lint",
    "copysqlwasm": "copyfiles -u 3 node_modules/sql.js/dist/sql-wasm.wasm public/assets"
  },
  "dependencies": {
    "@capacitor-community/electron": "^4.1.0",
    "@capacitor-community/sqlite": "^3.7.0",
    "@capacitor/android": "^3.7.0",
    "@capacitor/core": "^3.7.0",
    "@capacitor/ios": "^3.7.0",
    "@mdi/font": "^7.2.96",
    "core-js": "^3.8.3",
    "material-design-icons-iconfont": "^6.7.0",
    "mdi": "^2.2.43",
    "vue": "^3.2.13",
    "vue-class-component": "^8.0.0-0",
    "vue-router": "^4.0.3",
    "vuetify": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@capacitor/cli": "^3.7.0",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "copyfiles": "^2.4.1",
    "prettier": "^2.4.1",
    "vue-sqlite-hook": "^2.1.8"
  }
}
